@model Library.ViewModel.ShelfVm

<h2>Edit Shelf</h2>

<form asp-action="UpdateShelf" method="post">
    <div class="form-group">
        <label asp-for="Hight" class="control-label"></label>
        <input asp-for="Hight" class="form-control" />
        <span asp-validation-for="Hight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Width" class="control-label"></label>
        <input asp-for="Width" class="form-control" />
        <span asp-validation-for="Width" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LibraryId" class="control-label"></label>
        <input asp-for="LibraryId" class="form-control" />
        <span asp-validation-for="LibraryId" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Update</button>
</form>
